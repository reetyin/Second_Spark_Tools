<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h3 class="mb-0">My Profile</h3>
          <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-outline-primary btn-sm" %>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <p><strong>Name:</strong> <%= @user.name %></p>
              <p><strong>Email:</strong> <%= @user.email %></p>
              <p><strong>Role:</strong> <%= @user.role.humanize %></p>
            </div>
            <div class="col-md-6">
              <p><strong>Address:</strong> <%= @user.address %></p>
              <p><strong>Member since:</strong> <%= @user.created_at.strftime("%B %d, %Y") %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h4>Quick Actions</h4>
        </div>
        <div class="card-body">
          <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-outline-secondary btn-block mb-2" %>
          <%= link_to "View My Orders", orders_path, class: "btn btn-primary btn-block mb-2" %>
          <%= link_to "View Shopping Cart", cart_path, class: "btn btn-outline-primary btn-block mb-2" %>
          <% if @user.admin? %>
            <%= link_to "Admin Dashboard", admin_products_path, class: "btn btn-success btn-block mb-2" %>
          <% end %>
          <%= link_to "Logout", logout_path, method: :delete, 
                      confirm: "Are you sure?", class: "btn btn-outline-danger btn-block" %>
        </div>
      </div>
    </div>
  </div>
</div>
