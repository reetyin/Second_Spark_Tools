<div class="container my-5">
  <!-- Hero Section with Background Image -->
  <div class="row mb-5">
    <div class="col-12">
      <div class="hero-section bg-primary text-white p-5 rounded position-relative" 
           style="background: linear-gradient(rgba(0,123,255,0.8), rgba(0,123,255,0.8)), url('<%= ImageService.get_hero_banner_image %>') center/cover;">
        <div class="hero-content">
          <h1 class="display-4 fw-bold">Welcome to Second Spark Tools</h1>
          <p class="lead">Your premier destination for quality used and refurbished power tools in Winnipeg, Manitoba. Giving tools a second life!</p>
          <%= link_to "Shop Now", products_path, class: "btn btn-light btn-lg me-3" %>
          <%= link_to "Learn More", "#about", class: "btn btn-outline-light btn-lg" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Categories Section -->
  <div class="row mb-5">
    <div class="col-12">
      <h2 class="text-center mb-4">Shop by Category</h2>
      <div class="row">
        <% @categories.each do |category| %>
          <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
              <img src="<%= ImageService.get_tool_image_for_category(category.name) %>" 
                   class="card-img-top" 
                   alt="<%= category.name %>"
                   style="height: 200px; object-fit: cover;">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= category.name %></h5>
                <p class="card-text flex-grow-1"><%= category.description %></p>
                <div class="mt-auto">
                  <%= link_to "Browse", products_path(category_id: category.id), class: "btn btn-primary" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Featured Products -->
  <div class="row mb-5">
    <div class="col-12">
      <h2 class="text-center mb-4">Featured Products</h2>
      <div class="row">
        <%= render partial: 'shared/product_card', collection: @featured_products, as: :product %>
      </div>
    </div>
  </div>

  <!-- About Section -->
  <div class="row mb-5" id="about">
    <div class="col-md-6">
      <img src="<%= ImageService.get_random_tool_image %>" 
           class="img-fluid rounded shadow" 
           alt="Workshop Tools"
           style="height: 300px; width: 100%; object-fit: cover;">
    </div>
    <div class="col-md-6">
      <h2>Why Choose Second Spark Tools?</h2>
      <p class="lead">We believe every tool deserves a second chance to shine.</p>
      <ul class="list-unstyled">
        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Quality tested and certified tools</li>
        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Affordable prices on premium brands</li>
        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Local Winnipeg business</li>
        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Sustainable choice for the environment</li>
      </ul>
      <%= link_to "Learn More About Us", "#", class: "btn btn-outline-primary" %>
    </div>
  </div>

  <!-- Image Gallery Section -->
  <div class="row mb-5">
    <div class="col-12">
      <h2 class="text-center mb-4">Our Workshop</h2>
      <div class="row">
        <% 4.times do |i| %>
          <div class="col-md-3 col-6 mb-3">
            <img src="<%= ImageService.get_random_tool_image %>" 
                 class="img-fluid rounded shadow-sm" 
                 alt="Workshop Image <%= i + 1 %>"
                 style="height: 200px; width: 100%; object-fit: cover;">
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
