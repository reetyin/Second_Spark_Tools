<div class="col-md-4 col-lg-3 mb-4">
  <div class="card h-100">
    <% if product.main_image.present? %>
      <img src="<%= product.main_image %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
    <% else %>
      <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
        <span class="text-muted">No Image</span>
      </div>
    <% end %>
    
    <div class="card-body d-flex flex-column">
      <h5 class="card-title"><%= product.name %></h5>
      <p class="card-text text-muted small"><%= product.category.name %></p>
      <p class="card-text flex-grow-1"><%= truncate(product.description, length: 80) %></p>
      
      <div class="mt-auto">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <span class="h5 text-primary mb-0"><%= product.formatted_price %></span>
          <span class="badge bg-<%= condition_badge_color(product.condition) %>">
            <%= product.condition.humanize %>
          </span>
        </div>
        
        <div class="d-flex justify-content-between align-items-center">
          <%= link_to "View Details", product, class: "btn btn-primary btn-sm" %>
          <small class="text-muted">
            <%= product.in_stock? ? "#{product.quantity} in stock" : "Out of stock" %>
          </small>
        </div>
      </div>
    </div>
  </div>
</div>
