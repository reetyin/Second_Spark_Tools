<<!-- Search Form -->
<%= render 'shared/search_form' %>

<div class="container my-4">
  <div class="row">
    <div class="col-12">
      <h2>Products 
        <small class="text-muted">(<%= @products.count %> items)</small>
      </h2>
    </div>
  </div>
  
  <div class="row">
    <%= render partial: 'shared/product_card', collection: @products, as: :product %>
  </div>
  
  <% if @products.empty? %>
    <div class="row">
      <div class="col-12 text-center">
        <div class="alert alert-info">
          <h4>No products found</h4>
          <p>Try adjusting your search criteria or <%= link_to "browse all products", products_path, class: "alert-link" %>.</p>
        </div>
      </div>
    </div>
  <% end %>
</div>
